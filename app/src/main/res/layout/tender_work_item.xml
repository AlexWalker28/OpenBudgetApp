<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/horizontal_padding"
    android:layout_marginTop="@dimen/horizontal_padding"
    android:layout_marginEnd="@dimen/horizontal_padding"
    android:layout_marginBottom="@dimen/horizontal_padding"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tender_work_item_author_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_padding"
            android:layout_marginTop="@dimen/horizontal_padding"
            android:layout_marginEnd="@dimen/horizontal_padding"
            android:layout_marginBottom="@dimen/horizontal_padding"
            android:paddingStart="@dimen/horizontal_padding"
            android:paddingEnd="@dimen/horizontal_padding"
            tools:text="Author name"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tender_work_item_text_view" />

        <TextView
            android:id="@+id/tender_work_item_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_padding"
            android:layout_marginTop="@dimen/horizontal_padding"
            android:layout_marginEnd="@dimen/horizontal_padding"
            android:layout_marginBottom="@dimen/horizontal_padding"
            android:paddingStart="@dimen/horizontal_padding"
            android:paddingTop="@dimen/horizontal_padding"
            android:paddingEnd="@dimen/horizontal_padding"
            android:paddingBottom="@dimen/horizontal_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Some text of work" />

        <ImageView
            android:id="@+id/tender_work_item_image_view"
            android:layout_width="200dp"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_padding"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="@dimen/horizontal_padding"
            android:paddingTop="@dimen/horizontal_padding"
            android:paddingEnd="@dimen/horizontal_padding"
            android:paddingBottom="@dimen/horizontal_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tender_work_item_text_view"
            app:layout_constraintTop_toBottomOf="@+id/tender_work_item_author_text_view"
            tools:src="@drawable/ic_photo_black_24dp" />

        <TextView
            android:id="@+id/tenders_work_item_photos_counter_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            tools:text="+3"
            android:textColor="@android:color/black"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="@+id/tender_work_item_image_view"
            app:layout_constraintEnd_toEndOf="@+id/tender_work_item_text_view"
            app:layout_constraintStart_toEndOf="@+id/tender_work_item_image_view"
            app:layout_constraintTop_toTopOf="@+id/tender_work_item_image_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
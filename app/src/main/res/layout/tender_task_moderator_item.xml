<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tender_task_moderator_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingTop="@dimen/horizontal_padding"
        android:paddingEnd="@dimen/horizontal_padding"
        android:paddingBottom="@dimen/horizontal_padding"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Task description" />

    <TextView
        android:id="@+id/tender_task_moderator_item_author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingTop="@dimen/horizontal_padding"
        android:paddingEnd="@dimen/horizontal_padding"
        android:paddingBottom="@dimen/horizontal_padding"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tender_task_moderator_item_text_view"
        tools:text="Author name" />

    <TextView
        android:id="@+id/tender_task_moderator_item_time_stamp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tender_task_moderator_item_author_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tender_task_moderator_item_author_text_view"
        tools:text="2023423" />


</androidx.constraintlayout.widget.ConstraintLayout>
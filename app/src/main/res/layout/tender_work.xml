<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/horizontal_padding"
    android:layout_marginTop="@dimen/horizontal_padding"
    android:layout_marginEnd="@dimen/horizontal_padding"
    android:layout_marginBottom="@dimen/horizontal_padding"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tender_work_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_padding"
            android:layout_marginTop="@dimen/horizontal_padding"
            android:layout_marginEnd="@dimen/horizontal_padding"
            android:layout_marginBottom="@dimen/horizontal_padding"
            android:paddingStart="@dimen/horizontal_padding"
            android:paddingTop="@dimen/horizontal_padding"
            android:paddingEnd="@dimen/horizontal_padding"
            android:paddingBottom="@dimen/horizontal_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Some text of work" />

        <ImageView
            android:id="@+id/tender_work_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_padding"
            android:layout_marginTop="@dimen/horizontal_padding"
            android:layout_marginEnd="@dimen/horizontal_padding"
            android:layout_marginBottom="@dimen/horizontal_padding"
            android:paddingStart="@dimen/horizontal_padding"
            android:paddingTop="@dimen/horizontal_padding"
            android:paddingEnd="@dimen/horizontal_padding"
            android:paddingBottom="@dimen/horizontal_padding"
            app:layout_constraintEnd_toEndOf="@id/tender_work_text_view"
            app:layout_constraintStart_toStartOf="@id/tender_work_text_view"
            app:layout_constraintTop_toBottomOf="@id/tender_work_text_view"
            tools:src="@drawable/ic_photo_black_24dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>